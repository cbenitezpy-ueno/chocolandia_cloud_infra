# Example Terraform Variables for Beer Awards Development Environment
# Copy this file to terraform.tfvars and customize the values

# AWS Configuration
aws_region = "us-east-1"  # Change to your preferred region
owner_email = "your-email@chocolandia.com"

# EC2 Key Pair (REQUIRED - create this in AWS Console first)
ec2_key_pair_name = "beer-awards-dev-key"  # Create this key pair in AWS

# Networking (default values work for most cases)
# vpc_cidr = "10.0.0.0/16"
# public_subnet_cidr = "10.0.1.0/24"

# Security (IMPORTANT: Restrict these for production)
allowed_cidr_blocks = ["0.0.0.0/0"]  # Allow all IPs to access EC2 directly (dev only)
ssh_cidr_blocks = ["YOUR_IP/32"]     # Replace with your IP for security

# EC2 Configuration
backend_instance_type = "t3.micro"   # Free tier eligible
backend_port = 3001

# Database Configuration
db_name = "beer_awards_dev"
db_username = "postgres"

# New Relic Monitoring (Optional)
# new_relic_license_key = "your-new-relic-license-key"

# Cost Control Features (Recommended for development)
enable_auto_shutdown = true
shutdown_schedule = "0 20 * * *"    # Stop at 8 PM daily
startup_schedule = "0 8 * * *"      # Start at 8 AM daily  
weekend_shutdown = true             # Stop on weekends